<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.exemplo.gestaofpma">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PrecosEditar" />
        <activity android:name=".QuartoEditar" />
        <activity android:name=".QuartoNovo" />
        <activity android:name=".ReservaEditar" />
        <activity android:name=".ReservaNovo" />
        <activity android:name=".ClienteEditar" />
        <activity android:name=".ClienteNovo" />
        <activity android:name=".Precos" />
        <activity android:name=".Quartos"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Reservas"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Clientes"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".utilizador">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>